---
// Components
import { Image } from 'astro:assets';
// Props
const { imgSRC } = Astro.props;
const { title, author, date, href, difficulty, prepTime } = Astro.props;
---
<article class="relative flex flex-col gap-4 bg-zinc-100 hover:bg-zinc-200 hover:dark:bg-zinc-800 dark:bg-zinc-900 p-4 rounded-xl outline-carrot-500 focus-within:outline-2 dark:outline-cerise-500 focus-within:outline-offset-2 transition-all focus-within:transition-none hover:-translate-y-2 duration-500 ease-in-out">
    <Image src={imgSRC} alt="A bird sitting on a nest of eggs." width="1200" height="800" class="rounded-lg object-cover aspect-[16/9]" loading="eager" />
    <!-- Recipe Meta -->
    <div class="flex flex-row justify-between gap-4">
        <p class="px-4 py-2 border-2 border-carrot-500 dark:border-cerise-500 rounded-full text-zinc-700 dark:text-zinc-300 text-sm capitalize">{difficulty}</p>
        <p class="px-4 py-2 border-2 border-carrot-500 dark:border-cerise-500 rounded-full text-zinc-700 dark:text-zinc-300 text-sm capitalize">{prepTime}</p>
    </div>
    <h3 class="flex-1 font-heading font-semibold line-clamp-2">{title}</h3>
    <div class="flex flex-row justify-between text-zinc-700 dark:text-zinc-300 text-sm">
        <p>{author}</p>
        <p>{date}</p>
    </div>
    <!-- SEO Link -->
    <a href={href} class="absolute inset-0 opacity-0">{title}</a>
</article>