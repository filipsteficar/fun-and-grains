---
const { pageTitle, pageDescription, currentURL, ogImage } = Astro.props;
---
<!-- Page Title -->
<title>{pageTitle || "Fun&Grains"}</title>
<!-- Meta Description -->
<meta name="description" content={pageDescription || "Fun&Grains Is a Vegan Food Blog"} />
<!-- Meta URL -->
{currentURL && <link rel="canonical" href={currentURL} />}
<!-- Open Graph -->
<meta property="og:title" content={pageTitle || "Fun&Grains" } />
<meta property="og:description" content={pageDescription || "Fun&Grains Is a Vegan Food Blog"} />
{currentURL && <meta property="og:url" content={currentURL} />}
<meta property="og:type" content="article" />
<!-- Open Graph Images -->
<meta property="og:image" content={ogImage || "https://images.unsplash.com/photo-1747138534600-625f83546f46?q=80&w=1170&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"} />